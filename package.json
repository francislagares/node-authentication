{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node.js + TypeScript + Prisma + MongoDB + Express API Server",
  "main": "server.js",
  "author": "Francis Lagares",
  "license": "MIT",
  "scripts": {
    "start:dev": "pnpm tsx watch src/app/index.ts ",
    "start": "pnpm build && NODE_ENV=production && node dist/server.js",
    "build": "pnpm build:clean && pnpm build:tsc",
    "build:tsc": "tsc && tsc-alias",
    "build:clean": "rimraf dist; exit 0",
    "vitest": "dotenv -e .env.development.test -- pnpm vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "test:report": "pnpm vite preview --outDir ./coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write",
    "prepare": "husky"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitest/coverage-v8": "^1.6.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "module-alias": "^2.2.3",
    "pm2": "^5.4.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tinyspy": "^2.2.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "vitest-mock-extended": "^1.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.1.0"
  },
  "packageManager": "pnpm@9.1.2+sha512.127dc83b9ea10c32be65d22a8efb4a65fb952e8fefbdfded39bdc3c97efc32d31b48b00420df2c1187ace28c921c902f0cb5a134a4d032b8b5295cbfa2c681e2"
}
